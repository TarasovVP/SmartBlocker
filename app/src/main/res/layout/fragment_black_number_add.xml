<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/black_number_add_left_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/black_number_add_right_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <EditText
        android:id="@+id/black_number_add_search"
        style="@style/SearchableEdittext"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:hint="Введите номер"
        app:layout_constraintEnd_toStartOf="@+id/black_number_add_right_gd"
        app:layout_constraintStart_toEndOf="@+id/black_number_add_left_gd"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <CheckBox
        android:id="@+id/black_number_add_contain"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:text="Содержит"
        app:layout_constraintEnd_toStartOf="@+id/black_number_add_right_gd"
        app:layout_constraintStart_toEndOf="@+id/black_number_add_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/black_number_add_search" />

    <CheckBox
        android:id="@+id/black_number_add_start"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:text="Начинается"
        app:layout_constraintEnd_toStartOf="@+id/black_number_add_right_gd"
        app:layout_constraintStart_toEndOf="@+id/black_number_add_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/black_number_add_contain" />

    <CheckBox
        android:id="@+id/black_number_add_end"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:text="Заканчивается"
        app:layout_constraintEnd_toStartOf="@+id/black_number_add_right_gd"
        app:layout_constraintStart_toEndOf="@+id/black_number_add_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/black_number_add_start" />

    <Button
        android:id="@+id/black_number_add_submit"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_25"
        android:text="@string/add"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/black_number_add_right_gd"
        app:layout_constraintStart_toEndOf="@+id/black_number_add_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/black_number_add_end"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>