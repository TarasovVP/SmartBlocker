<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="contact"
            type="com.tarasovvp.blacklister.model.Contact" />

        <variable
            name="filter"
            type="com.tarasovvp.blacklister.model.Filter" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginHorizontal="@dimen/margin_2"
        app:cardElevation="@dimen/padding_1"
        app:cardCornerRadius="@dimen/padding_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_contact_filter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_contact_filter_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#80989595"
                android:scaleType="center"
                app:imageResource="@{contact == null ? filter.conditionTypeIcon : contact.avatar()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_contact_filter_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <ImageView
                android:id="@+id/item_contact_filter_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:imageResource="@{filter == null ? 0 : filter.filterTypeIcon}"
                app:layout_constraintBottom_toBottomOf="@+id/item_contact_filter_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_contact_filter_avatar" />

            <TextView
                android:id="@+id/item_contact_filter_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_8"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="@{contact == null ? filter.name : contact.name}"
                app:layout_constraintEnd_toStartOf="@+id/item_contact_filter_type"
                app:layout_constraintStart_toEndOf="@+id/item_contact_filter_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_contact_filter_number"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_contact_filter_name"
                app:layout_constraintStart_toStartOf="@+id/item_contact_filter_name"
                app:layout_constraintTop_toBottomOf="@+id/item_contact_filter_name"
                app:mainText="@{contact == null ? filter.filter : contact.phone}"
                app:searchText="@{contact == null ? filter.searchText : contact.searchText}" />

            <ImageView
                android:id="@+id/item_contact_filter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imageResource="@{contact == null ? 0 : contact.contactTypeIcon()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>