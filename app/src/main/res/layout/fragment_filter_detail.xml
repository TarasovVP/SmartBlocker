<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="filter"
            type="com.tarasovvp.blacklister.model.Filter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_16">

        <include
            android:id="@+id/filter_detail_item_filter"
            layout="@layout/item_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_8"
            app:filter="@{filter}"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_detail_delete_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:text="@string/delete_menu"
            app:layout_constraintTop_toBottomOf="@+id/filter_detail_item_filter" />

        <TextView
            android:id="@+id/filter_detail_conditions_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:drawablePadding="@dimen/padding_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/padding_2"
            android:text="@{filter.addFilterStateDescription}"
            app:drawableEndCompat="@drawable/ic_info"
            app:layout_constraintTop_toBottomOf="@+id/filter_detail_delete_filter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_detail_filter_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:layout_marginTop="@dimen/margin_15"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_detail_conditions_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


