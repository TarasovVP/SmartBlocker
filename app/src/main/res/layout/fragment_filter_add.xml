<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="filter"
            type="com.tarasovvp.blacklister.model.Filter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="@dimen/padding_16">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/filter_add_contact_by_filter_list"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/filter_add_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_16"
                    app:imageResource="@{filter.listTypeIcon}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/filter_add_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_10"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_icon" />

                <EditText
                    android:id="@+id/filter_add_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:digits="0123456789+"
                    android:hint="@string/enter_filter"
                    android:inputType="phone"
                    android:text="@{filter.filter}"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_title"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <TextView
                    android:id="@+id/filter_add_conditions_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/add_conditions_title"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_input" />

                <TextView
                    android:id="@+id/filter_add_conditions_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:alpha="0.6"
                    android:drawablePadding="@dimen/padding_10"
                    android:text="@string/details_"
                    app:drawableStartCompat="@drawable/ic_info"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_conditions_title" />

                <CheckBox
                    android:id="@+id/filter_add_contain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:drawableEnd="@drawable/ic_contain"
                    android:drawablePadding="@dimen/padding_10"
                    android:layoutDirection="rtl"
                    android:checked="@{filter.contain}"
                    android:text="@string/filter_contain"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_conditions_info" />

                <CheckBox
                    android:id="@+id/filter_add_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:drawableEnd="@drawable/ic_start"
                    android:drawablePadding="@dimen/padding_10"
                    android:layoutDirection="rtl"
                    android:checked="@{filter.start}"
                    android:text="@string/filter_start"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_contain" />

                <CheckBox
                    android:id="@+id/filter_add_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:drawableEnd="@drawable/ic_end"
                    android:drawablePadding="@dimen/padding_10"
                    android:layoutDirection="rtl"
                    android:checked="@{filter.end}"
                    android:text="@string/filter_end"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_start" />

                <Button
                    android:id="@+id/filter_delete_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/delete_menu"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_end" />

                <Button
                    android:id="@+id/filter_add_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@{filter.fromDb ? @string/edit : @string/add}"
                    android:visibility="@{!filter.isFilterIdentical ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/filter_delete_submit"
                    app:layout_constraintVertical_bias="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ExpandableListView
            android:id="@+id/filter_add_contact_by_filter_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:layout_marginTop="@dimen/margin_15"
            android:groupIndicator="@null"
            android:nestedScrollingEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

