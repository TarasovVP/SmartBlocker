<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="filterToInput"
            type="Boolean" />
        <variable
            name="filter"
            type="com.tarasovvp.blacklister.model.Filter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:paddingHorizontal="@dimen/padding_16">

        <include
            android:id="@+id/filter_add_item_filter"
            layout="@layout/item_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_2"
            app:filter="@{filter}"
            android:layout_marginTop="@dimen/margin_8"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/filter_add_conditions_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:drawablePadding="@dimen/padding_10"
            android:padding="@dimen/padding_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{filter.filterActionDescription}"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_item_filter"
            app:drawableEndCompat="@drawable/ic_info" />

        <Spinner
            android:id="@+id/filter_add_country_code_spinner"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_0"
            android:background="@drawable/bg_spinner"
            android:paddingEnd="@dimen/padding_10"
            android:minWidth="@dimen/margin_45"
            android:visibility="@{filter.typeContain ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/filter_add_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/filter_add_input_layout"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/filter_add_country_code_value"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_0"
            android:gravity="center"
            android:text="@{filter.countryCode.countryCode}"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@+id/filter_add_input_layout"
            app:layout_constraintStart_toEndOf="@+id/filter_add_country_code_spinner"
            app:layout_constraintTop_toTopOf="@+id/filter_add_input_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filter_add_input_layout"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:endIconDrawable="@drawable/ic_close_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/filter_add_country_code_value"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_conditions_description">

            <com.tarasovvp.blacklister.utils.mask.MaskedEditText
                android:id="@+id/filter_add_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:backgroundTint="@{ContextCompat.getColor(context, filter.filterAction.color)}"
                android:hint="@{filter.typeFull ? filter.conditionTypeFullHint() : filter.typeStart ? filter.conditionTypeStartHint() : @string/enter_filter}"
                app:text="@{filter.filterToInput()}"
                app:filterToInput="@{filterToInput}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_add_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:enabled="@{!filter.inValidAddFilterState}"
            android:text="@{filter.filterAction.title}"
            android:textColor="@{ContextCompat.getColor(context, filter.filterAction.color)}"
            app:strokeColor="@{ContextCompat.getColor(context, filter.filterAction.color)}"
            android:drawableEnd="@{ContextCompat.getDrawable(context, filter.filterActionIcon())}"
            android:drawablePadding="@dimen/padding_20"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_input_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_add_contact_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_submit" />

        <include
            android:id="@+id/filter_add_empty_list"
            layout="@layout/include_empty_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_submit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

