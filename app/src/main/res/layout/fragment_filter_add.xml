<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="filterToInput"
            type="Boolean" />
        <variable
            name="filter"
            type="com.tarasovvp.smartblocker.models.Filter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_16">

        <include
            android:id="@+id/filter_add_item_filter"
            layout="@layout/item_filter_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_8"
            app:filter="@{filter}"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/filter_add_country_code_spinner"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_0"
            android:minWidth="@dimen/margin_45"
            android:paddingEnd="@dimen/padding_10"
            android:background="@drawable/bg_rounded"
            android:visibility="@{filter.typeContain ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/filter_add_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/filter_add_input"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/filter_add_country_code_value"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_0"
            android:gravity="center"
            android:text="@{filter.countryCode.countryCode}"
            android:textSize="@dimen/text_size_18"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:background="@drawable/bg_rounded"
            app:layout_constraintBottom_toBottomOf="@+id/filter_add_input"
            app:layout_constraintEnd_toStartOf="@+id/filter_add_input"
            app:layout_constraintStart_toEndOf="@+id/filter_add_country_code_spinner"
            app:layout_constraintTop_toTopOf="@+id/filter_add_input" />

        <com.tarasovvp.smartblocker.utils.mask.MaskedEditText
            android:id="@+id/filter_add_input"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:paddingHorizontal="@dimen/padding_5"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:filterToInput="@{filterToInput}"
            app:text="@{filter.filterToInput()}"
            android:layout_marginTop="@dimen/margin_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/filter_add_country_code_value"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_item_filter" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_add_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_30"
            android:enabled="@{!filter.invalidFilterAction}"
            android:alpha="@{filter.invalidFilterAction ? 0.5f : 1f}"
            android:text="@{filter.filterAction.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_input" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_add_contact_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_8"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_submit" />

        <include
            android:id="@+id/filter_add_empty_list"
            layout="@layout/include_empty_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_add_submit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

