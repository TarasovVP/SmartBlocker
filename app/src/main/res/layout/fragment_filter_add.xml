<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="android.content.Context" />
        <variable
            name="filter"
            type="com.tarasovvp.blacklister.model.Filter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="@dimen/padding_16">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/filter_add_contact_by_filter_list"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/filter_add_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_16"
                    app:imageResource="@{filter.listTypeIcon}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/filter_add_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_10"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_icon" />

                <Spinner
                    android:id="@+id/filter_add_country_code_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_0"
                    android:background="@drawable/bg_spinner"
                    android:paddingEnd="@dimen/padding_10"
                    android:visibility="@{filter.isTypeContain() ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/filter_add_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/filter_add_input"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/filter_add_country_code_value"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_0"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_18"
                    android:visibility="@{filter.isTypeContain() ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/filter_add_input"
                    app:layout_constraintStart_toEndOf="@+id/filter_add_country_code_spinner"
                    app:layout_constraintTop_toTopOf="@+id/filter_add_input" />

                <EditText
                    android:id="@+id/filter_add_input"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:digits="0123456789+"
                    android:hint="@string/enter_filter"
                    android:inputType="phone"
                    android:text="@{filter.filterToInput(context)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/filter_add_country_code_value"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_title"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <TextView
                    android:id="@+id/filter_add_conditions_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/add_conditions_title"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_input" />

                <TextView
                    android:id="@+id/filter_add_conditions_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:alpha="0.6"
                    android:drawablePadding="@dimen/padding_10"
                    android:text="@string/details_"
                    app:drawableStartCompat="@drawable/ic_info"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_conditions_title" />

                <RadioGroup
                    android:id="@+id/type_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/filter_add_conditions_info">

                    <RadioButton
                        android:id="@+id/filter_type_full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{!filter.isTypeStart() &amp;&amp; !filter.isTypeContain()}"
                        android:drawableEnd="@drawable/ic_end"
                        android:drawablePadding="@dimen/padding_10"
                        android:layoutDirection="rtl"
                        android:text="@string/full_number" />

                    <RadioButton
                        android:id="@+id/filter_type_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{filter.isTypeStart()}"
                        android:drawableEnd="@drawable/ic_start"
                        android:drawablePadding="@dimen/padding_10"
                        android:layoutDirection="rtl"
                        android:text="@string/filter_start" />

                    <RadioButton
                        android:id="@+id/filter_type_contain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="@{filter.isTypeContain()}"
                        android:drawableEnd="@drawable/ic_contain"
                        android:drawablePadding="@dimen/padding_10"
                        android:layoutDirection="rtl"
                        android:text="@string/filter_contain" />
                </RadioGroup>

                <Button
                    android:id="@+id/filter_delete_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/delete_menu"
                    android:visibility="@{filter.isFromDb ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/type_radio_group" />

                <Button
                    android:id="@+id/filter_add_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@{filter.fromDb ? @string/edit : @string/add}"
                    android:visibility="@{!filter.isFilterIdentical ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/filter_delete_submit"
                    app:layout_constraintVertical_bias="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ExpandableListView
            android:id="@+id/filter_add_contact_by_filter_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0"
            android:layout_marginTop="@dimen/margin_15"
            android:groupIndicator="@null"
            android:nestedScrollingEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

