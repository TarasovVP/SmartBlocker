<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_add_to_list_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.085" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_add_to_list_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.915" />

        <TextView
            android:id="@+id/dialog_add_to_list_title"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Добавить номер в фильтр"
            app:layout_constraintEnd_toStartOf="@+id/dialog_add_to_list_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/dialog_add_to_list_left_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_add_to_list_black_priority"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:text="@string/black_list"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_add_to_list_priority"
            app:layout_constraintTop_toTopOf="@+id/dialog_add_to_list_priority"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_add_to_list_priority" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/dialog_add_to_list_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            app:layout_constraintStart_toEndOf="@+id/dialog_add_to_list_black_priority"
            app:layout_constraintEnd_toStartOf="@+id/dialog_add_to_list_white_priority"
            app:layout_constraintTop_toBottomOf="@+id/dialog_add_to_list_title" />

        <TextView
            android:id="@+id/dialog_add_to_list_white_priority"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:text="@string/white_list"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/dialog_add_to_list_priority"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dialog_add_to_list_priority"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_add_to_list_priority"  />

        <Button
            android:id="@+id/dialog_add_to_list_cancel"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:theme="@style/StrokeButton"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/cancel"
            android:layout_marginEnd="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_add_to_list_confirm"
            app:layout_constraintStart_toEndOf="@+id/dialog_add_to_list_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/dialog_add_to_list_priority" />

        <Button
            android:id="@+id/dialog_add_to_list_confirm"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:text="@string/ok"
            android:theme="@style/StrokeButton"
            android:layout_marginStart="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_add_to_list_cancel"
            app:layout_constraintEnd_toStartOf="@+id/dialog_add_to_list_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/dialog_add_to_list_cancel"
            app:layout_constraintTop_toTopOf="@+id/dialog_add_to_list_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




