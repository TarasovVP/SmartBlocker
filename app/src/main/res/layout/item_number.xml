<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_15"
    android:layout_marginHorizontal="@dimen/margin_20">

    <ImageView
        android:id="@+id/item_number_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/item_number_divider"
        app:layout_constraintEnd_toStartOf="@+id/item_number_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_number_value"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/item_number_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_number_avatar"
        app:layout_constraintEnd_toStartOf="@+id/item_number_start"
        app:layout_constraintStart_toEndOf="@+id/item_number_avatar" />

    <ImageView
        android:id="@+id/item_number_start"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_10"
        android:src="@drawable/ic_start"
        app:layout_constraintBottom_toBottomOf="@+id/item_number_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_number_avatar"
        app:layout_constraintEnd_toStartOf="@+id/item_number_contain" />

    <ImageView
        android:id="@+id/item_number_contain"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_10"
        android:src="@drawable/ic_contain"
        app:layout_constraintBottom_toBottomOf="@+id/item_number_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_number_avatar"
        app:layout_constraintEnd_toStartOf="@+id/item_number_end" />

    <ImageView
        android:id="@+id/item_number_end"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_10"
        android:src="@drawable/ic_end"
        app:layout_constraintBottom_toBottomOf="@+id/item_number_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_number_avatar"
        app:layout_constraintEnd_toStartOf="@+id/item_number_menu" />

    <ImageView
        android:id="@+id/item_number_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/item_number_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_number_avatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/item_number_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/margin_5"
        app:layout_constraintTop_toBottomOf="@+id/item_number_avatar"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>