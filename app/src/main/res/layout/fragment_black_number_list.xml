<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.blacknumberlist.BlackNumberListFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_list_left_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_list_right_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

    <TextView
        android:id="@+id/number_list_filter"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_10"
        android:text="@string/black_number_no_filter"
        app:drawableStartCompat="@drawable/ic_filter"
        android:drawablePadding="@dimen/padding_10"
        app:layout_constraintStart_toEndOf="@+id/number_list_left_gd"
        app:layout_constraintEnd_toStartOf="@+id/number_list_right_gd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/number_list_delete_all" />

    <CheckBox
        android:id="@+id/number_list_delete_all"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_10"
        android:text="@string/choose_all"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/number_list_left_gd"
        app:layout_constraintEnd_toStartOf="@+id/number_list_delete_btn"
        app:layout_constraintTop_toBottomOf="@+id/number_list_filter"
        app:layout_constraintBottom_toTopOf="@+id/number_list_refresh" />

    <ImageButton
        android:id="@+id/number_list_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/number_list_delete_all"
        app:layout_constraintEnd_toStartOf="@+id/number_list_right_gd"
        app:layout_constraintTop_toTopOf="@+id/number_list_delete_all"
        app:layout_constraintBottom_toBottomOf="@+id/number_list_delete_all" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/number_list_refresh"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_0"
        app:layout_constraintStart_toEndOf="@+id/number_list_left_gd"
        app:layout_constraintEnd_toStartOf="@+id/number_list_right_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_list_delete_all"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/number_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/number_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/list_empty" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/number_list_fab_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/blue"
        android:layout_margin="@dimen/margin_30"/>


</androidx.constraintlayout.widget.ConstraintLayout>