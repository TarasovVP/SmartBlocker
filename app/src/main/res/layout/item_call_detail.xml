<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.core.content.ContextCompat" />
        <import type="android.view.View" />
        <variable
            name="call"
            type="com.tarasovvp.smartblocker.models.Call" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/padding_12"
        app:cardElevation="@dimen/padding_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_16">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_call_detail_avatar"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:background="@color/light_steel_blue"
                android:scaleType="center"
                app:imageUrl="@{call.photoUrl}"
                app:layout_constraintEnd_toStartOf="@+id/item_call_detail_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeHolder="@{call.placeHolder(context)}"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                app:imageResource="@{call.filter.filterTypeIcon}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_detail_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_detail_avatar" />

            <TextView
                android:id="@+id/item_call_detail_number"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@{call.highlightedSpanned}"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/item_call_detail_name"
                app:layout_constraintEnd_toStartOf="@+id/item_call_detail_statement"
                app:layout_constraintStart_toEndOf="@+id/item_call_detail_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_call_detail_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@+id/item_call_detail_number"
                app:layout_constraintStart_toStartOf="@+id/item_call_detail_number"
                app:layout_constraintTop_toBottomOf="@+id/item_call_detail_number"
                app:mainText="@{call.nameEmpty ? call.isExtract ? @string/number_from_call_log : @string/number_not_from_contacts : call.callName}"
                app:searchText="@{call.searchText}" />

            <TextView
                android:id="@+id/item_call_detail_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_5"
                android:gravity="end|center_vertical"
                android:text="@string/statement"
                android:textSize="@dimen/text_size_12"
                app:drawableEndCompat="@drawable/ic_arrow_forward"
                app:layout_constraintStart_toEndOf="@+id/item_call_detail_number"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_detail_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_call_detail_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
