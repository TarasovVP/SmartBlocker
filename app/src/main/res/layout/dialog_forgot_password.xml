<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_info_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.085" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dialog_info_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.915" />

        <TextView
            android:id="@+id/dialog_forgot_password_title"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Enter your email and we send new password on it"
            app:layout_constraintBottom_toTopOf="@+id/dialog_forgot_password_input"
            app:layout_constraintEnd_toStartOf="@+id/dialog_info_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/dialog_info_left_guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dialog_forgot_password_input"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:textColor="@color/white"
            android:hint="@string/enter_your_email"
            app:layout_constraintBottom_toTopOf="@+id/dialog_forgot_password_cancel"
            app:layout_constraintEnd_toStartOf="@+id/dialog_info_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/dialog_info_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/dialog_forgot_password_title" />

        <Button
            android:id="@+id/dialog_forgot_password_cancel"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:theme="@style/StrokeButton"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/cancel"
            android:layout_marginEnd="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialog_forgot_password_confirm"
            app:layout_constraintStart_toEndOf="@+id/dialog_info_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/dialog_forgot_password_input" />

        <Button
            android:id="@+id/dialog_forgot_password_confirm"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_0"
            android:text="@string/ok"
            android:theme="@style/StrokeButton"
            android:layout_marginStart="@dimen/margin_10"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_forgot_password_cancel"
            app:layout_constraintEnd_toStartOf="@+id/dialog_info_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/dialog_forgot_password_cancel"
            app:layout_constraintTop_toTopOf="@+id/dialog_forgot_password_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>



