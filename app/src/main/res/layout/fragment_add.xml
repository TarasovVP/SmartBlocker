<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RadioGroup
        android:id="@+id/add_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5"
        app:layout_constraintBottom_toTopOf="@+id/add_view_pager"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/add_full_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_group"
            android:checked="true"
            android:gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/full_number"/>

        <RadioButton
            android:id="@+id/add_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radio_group"
            android:gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/filter"/>
    </RadioGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/add_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_radio_group" />

</androidx.constraintlayout.widget.ConstraintLayout>

