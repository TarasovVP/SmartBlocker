<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_20"
    tools:context=".ui.main.settings.SettingsListFragment">

    <TextView
        android:id="@+id/settings_list_block_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_20"
        android:text="@string/block_settings"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_list_account_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_20"
        android:text="@string/personal_details"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        app:layout_constraintTop_toBottomOf="@+id/settings_list_block_settings" />

    <TextView
        android:id="@+id/settings_list_app_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_20"
        android:text="@string/app_language"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        app:layout_constraintTop_toBottomOf="@+id/settings_list_account_details" />

    <TextView
        android:id="@+id/settings_list_app_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_20"
        android:text="@string/app_theme"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        app:layout_constraintTop_toBottomOf="@+id/settings_list_app_language" />

    <Button
        android:id="@+id/settings_list_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_25"
        android:text="@string/sign_out"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_list_app_theme" />

</androidx.constraintlayout.widget.ConstraintLayout>