<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_16"
        tools:context=".ui.settings.settings_list.SettingsListFragment">

        <TextView
            android:id="@+id/settings_list_block_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:paddingVertical="@dimen/padding_20"
            android:text="@string/block_settings"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings_list_account_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_20"
            android:text="@string/personal_details"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:layout_constraintTop_toBottomOf="@+id/settings_list_block_settings" />

        <TextView
            android:id="@+id/settings_list_app_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_20"
            android:text="@string/app_language"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:layout_constraintTop_toBottomOf="@+id/settings_list_account_details" />

        <TextView
            android:id="@+id/settings_list_app_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_20"
            android:text="@string/app_theme"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            app:layout_constraintTop_toBottomOf="@+id/settings_list_app_language" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>