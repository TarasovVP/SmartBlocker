<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.core.content.ContextCompat" />

        <import type="android.view.View" />

        <variable
            name="call"
            type="com.tarasovvp.smartblocker.models.Call" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/padding_12"
        app:cardElevation="@dimen/padding_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="@{call.deleteMode &amp;&amp; !call.blockedCall ? 0.5f : 1f}"
            android:padding="@dimen/padding_16">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_call_avatar"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:background="@color/light_steel_blue"
                android:scaleType="center"
                app:imageUrl="@{call.photoUrl}"
                app:layout_constraintBottom_toTopOf="@+id/item_call_divider"
                app:layout_constraintEnd_toStartOf="@+id/item_call_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeHolder="@{call.placeHolder(context)}"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:visibility="@{call.extract ? View.VISIBLE : View.GONE}"
                app:imageResource="@{call.filter.filterTypeIcon}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_avatar" />

            <TextView
                android:id="@+id/item_call_number"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@{call.highlightedSpanned}"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/item_call_name"
                app:layout_constraintEnd_toStartOf="@+id/item_call_type_icon"
                app:layout_constraintStart_toEndOf="@+id/item_call_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_call_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/item_call_time"
                app:layout_constraintEnd_toEndOf="@+id/item_call_number"
                app:layout_constraintStart_toStartOf="@+id/item_call_number"
                app:layout_constraintTop_toBottomOf="@+id/item_call_number"
                app:mainText="@{call.nameEmpty ? call.isExtract ? @string/number_from_call_log : @string/number_not_from_contacts : call.callName}"
                app:searchText="@{call.searchText}" />

            <TextView
                android:id="@+id/item_call_time"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:text="@{call.isFilteredCallDetails ? call.dateTimeFromCallDate() : call.timeFromCallDate()}"
                android:textSize="@dimen/text_size_10"
                android:visibility="@{call.extract ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_number"
                app:layout_constraintStart_toStartOf="@+id/item_call_number"
                app:layout_constraintTop_toBottomOf="@+id/item_call_name" />

            <ImageView
                android:id="@+id/item_call_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{call.deleteMode &amp;&amp; call.blockedCall || call.extract ? View.GONE : View.VISIBLE}"
                app:imageResource="@{call.callIcon()}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_delete"
                app:layout_constraintStart_toEndOf="@+id/item_call_number"
                app:layout_constraintTop_toTopOf="@+id/item_call_avatar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_call_filter_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@{call.filterNullOrEmpty ? null : ContextCompat.getDrawable(context, call.filter.conditionTypeSmallIcon)}"
                android:gravity="center_vertical|end"
                android:text="@{call.filterValue}"
                android:textColor="@{call.filter.blocker ? @color/sunset : @color/islamic_green}"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_time"
                app:layout_constraintEnd_toEndOf="@+id/item_call_type_icon"
                app:layout_constraintTop_toTopOf="@+id/item_call_time" />

            <CheckBox
                android:id="@+id/item_call_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{call.checkedForDelete}"
                android:padding="@dimen/padding_8"
                android:visibility="@{call.deleteMode &amp;&amp; call.blockedCall ? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_call_avatar" />

            <View
                android:id="@+id/item_call_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/light_steel_blue"
                app:layout_constraintTop_toBottomOf="@+id/item_call_time" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_call_filter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@{call.callFilterTitle}"
                android:textColor="@{ContextCompat.getColor(context, call.callFilterTint)}"
                android:textSize="@dimen/text_size_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_call_divider" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_call_filter_value"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:drawableStart="@{call.callFilterIcon == null ? null : ContextCompat.getDrawable(context, call.callFilterIcon)}"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{call.callFilterValue}"
                android:textColor="@{ContextCompat.getColor(context, call.callFilterTint)}"
                android:visibility="@{call.filteredNullOrEmpty ? View.GONE : View.VISIBLE}"
                android:textSize="@dimen/text_size_10"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_filter_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_call_filter_title"
                app:layout_constraintTop_toTopOf="@+id/item_call_filter_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>