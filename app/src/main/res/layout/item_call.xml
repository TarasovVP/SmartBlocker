<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
            name="isDetail"
            type="Boolean" />
        <variable
            name="call"
            type="com.tarasovvp.smartblocker.models.Call" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_8"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/padding_12"
        app:cardElevation="@dimen/padding_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="@{call.deleteMode &amp;&amp; !call.blockedCall ? 0.5f : 1f}"
            android:padding="@dimen/padding_8">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_call_avatar"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:background="@color/cornflower_blue"
                android:scaleType="center"
                app:tint="@color/white"
                app:imageUrl="@{call.photoUrl}"
                app:placeHolder="@{call.placeHolder(context)}"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_call_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                app:imageResource="@{call.filter.filterTypeIcon}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_avatar" />

            <TextView
                android:id="@+id/item_call_number"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@{call.highlightedSpanned}"
                app:layout_constraintBottom_toTopOf="@+id/item_call_name"
                app:layout_constraintEnd_toStartOf="@+id/item_call_type_icon"
                app:layout_constraintStart_toEndOf="@+id/item_call_avatar"
                app:layout_constraintTop_toTopOf="@id/item_call_avatar"  />

            <TextView
                android:id="@+id/item_call_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/item_call_time"
                app:layout_constraintEnd_toEndOf="@+id/item_call_number"
                app:layout_constraintStart_toStartOf="@+id/item_call_number"
                app:layout_constraintTop_toBottomOf="@+id/item_call_number"
                app:mainText="@{call.nameEmpty ? call.isExtract ? @string/number_from_call_log : @string/number_not_from_contacts : call.callName}"
                app:searchText="@{call.searchText}" />

            <TextView
                android:id="@+id/item_call_time"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:text="@{call.isFilteredCallDetails ? call.dateTimeFromCallDate() : call.timeFromCallDate()}"
                android:visibility="@{call.extract ? View.GONE : View.VISIBLE}"
                android:textSize="@dimen/text_size_10"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_number"
                app:layout_constraintStart_toStartOf="@+id/item_call_number"
                app:layout_constraintTop_toBottomOf="@+id/item_call_name" />

            <ImageView
                android:id="@+id/item_call_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{call.deleteMode &amp;&amp; call.blockedCall || call.extract || isDetail ? View.GONE : View.VISIBLE}"
                app:imageResource="@{call.callIcon()}"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintTop_toTopOf="@+id/item_call_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_call_delete"
                app:layout_constraintStart_toEndOf="@+id/item_call_number" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_call_block_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{call.filterValue}"
                android:visibility="@{call.extract || isDetail || call.isFilteredCallDetails || (!call.isBlockedCall &amp;&amp; !call.isPermittedCall) ? View.GONE : View.VISIBLE}"
                android:textSize="@dimen/text_size_10"
                android:textColor="@{call.filter.blackFilter ? @color/sunset : @color/islamic_green}"
                android:gravity="center_vertical|end"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_time"
                app:layout_constraintTop_toTopOf="@+id/item_call_time"
                app:layout_constraintEnd_toEndOf="@+id/item_call_type_icon"
                android:drawableStart="@{call.filterConditionTypeIcon(context)}" />

            <CheckBox
                android:id="@+id/item_call_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{call.checkedForDelete}"
                android:padding="@dimen/padding_8"
                android:visibility="@{call.deleteMode &amp;&amp; call.blockedCall ? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintEnd_toStartOf="@+id/item_call_statement"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintTop_toTopOf="@+id/item_call_avatar" />

            <ImageView
                android:id="@+id/item_call_filter_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0"
                android:visibility="@{isDetail ? View.GONE : call.extract ? View.VISIBLE : View.GONE}"
                app:imageResource="@{call.filter.conditionTypeIcon()}"
                app:tint="@{call.filter.blackFilter ? @color/sunset : @color/islamic_green}"
                app:layout_constraintTop_toTopOf="@+id/item_call_avatar"
                app:layout_constraintBottom_toTopOf="@+id/item_call_filter_value"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/item_call_filter_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="end|center_vertical"
                android:textSize="@dimen/text_size_10"
                android:visibility="@{isDetail ? View.GONE : call.extract ? View.VISIBLE : View.GONE}"
                android:text="@{call.filter.filter}"
                android:textColor="@{call.filter.blackFilter ? @color/sunset : @color/islamic_green}"
                app:layout_constraintTop_toBottomOf="@+id/item_call_filter_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar" />

            <TextView
                android:id="@+id/item_call_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_5"
                android:text="@string/statement"
                android:visibility="@{isDetail ? View.VISIBLE : View.GONE, default=gone}"
                android:gravity="end|center_vertical"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toStartOf="@+id/item_call_filter_value"
                app:layout_constraintBottom_toBottomOf="@+id/item_call_avatar"
                app:layout_constraintTop_toTopOf="@+id/item_call_avatar"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

