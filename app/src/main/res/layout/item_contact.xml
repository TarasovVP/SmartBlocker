<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
            name="isDetail"
            type="Boolean" />
        <variable
            name="contact"
            type="com.tarasovvp.blacklister.model.Contact" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_8"
        app:cardCornerRadius="@dimen/padding_12"
        app:cardElevation="@dimen/padding_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_contact_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:circleImageUrl="@{contact.photoUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_contact_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:nameInitial="@{contact.nameInitial}" />

            <TextView
                android:id="@+id/item_contact_number"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/margin_16"
                app:layout_constraintTop_toTopOf="@+id/item_contact_avatar"
                app:layout_constraintStart_toEndOf="@+id/item_contact_avatar"
                app:layout_constraintEnd_toStartOf="@+id/item_contact_filter_value"
                app:layout_constraintBottom_toTopOf="@+id/item_contact_name"
                app:mainNumberText="@{contact.number}"
                app:searchNumberText="@{contact.searchText}" />

            <TextView
                android:id="@+id/item_contact_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@+id/item_contact_number"
                app:layout_constraintStart_toStartOf="@+id/item_contact_number"
                app:layout_constraintTop_toBottomOf="@+id/item_contact_number"
                app:layout_constraintBottom_toBottomOf="@+id/item_contact_avatar"
                app:mainText="@{ contact.nameEmpty ? @string/number_not_from_contacts : contact.name}"
                app:searchText="@{contact.searchText}" />

            <ImageView
                android:id="@+id/item_contact_filter_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_0"
                android:visibility="@{isDetail ? View.GONE : View.VISIBLE}"
                app:imageResource="@{contact.filter.conditionTypeIcon()}"
                app:tint="@{contact.filter.blackFilter ? @color/sunset : @color/islamic_green}"
                app:layout_constraintTop_toTopOf="@+id/item_contact_number"
                app:layout_constraintBottom_toTopOf="@+id/item_contact_filter_value"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/item_contact_filter_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="end|center_vertical"
                android:textSize="@dimen/text_size_10"
                android:visibility="@{isDetail ? View.GONE : View.VISIBLE}"
                android:text="@{contact.filter.filter}"
                android:textColor="@{contact.filter.blackFilter ? @color/sunset : @color/islamic_green}"
                app:layout_constraintEnd_toStartOf="@+id/item_contact_statement"
                app:layout_constraintStart_toEndOf="@+id/item_contact_number"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/item_contact_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_5"
                android:text="@string/statement"
                android:visibility="@{isDetail ? View.VISIBLE : View.GONE, default=gone}"
                android:gravity="end|center_vertical"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_contact_number"
                app:layout_constraintBottom_toBottomOf="@+id/item_contact_name"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>