<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:padding="@dimen/padding_12"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginHorizontal="@dimen/margin_16">

    <ImageView
        android:id="@+id/item_contact_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_contact_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_contact_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_contact_avatar"
        app:layout_constraintEnd_toEndOf="@+id/item_contact_avatar" />

    <TextView
        android:id="@+id/item_contact_name"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/item_contact_number"
        app:layout_constraintEnd_toStartOf="@+id/item_contact_menu"
        app:layout_constraintStart_toEndOf="@+id/item_contact_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_contact_number"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:paddingVertical="@dimen/padding_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_contact_menu"
        app:layout_constraintStart_toEndOf="@+id/item_contact_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_name" />

    <ImageView
        android:id="@+id/item_contact_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/item_contact_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_contact_avatar"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>