<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="contact"
            type="com.tarasovvp.blacklister.model.Contact" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_8"
        app:cardCornerRadius="@dimen/padding_12"
        app:cardElevation="@dimen/padding_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_contact_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:circleImageUrl="@{contact.photoUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_contact_filter_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:nameInitial="@{contact.nameInitial}" />

            <ImageView
                android:id="@+id/item_contact_filter_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:imageResource="@{contact.filterTypeIcon}"
                app:layout_constraintBottom_toBottomOf="@+id/item_contact_avatar"
                app:layout_constraintEnd_toEndOf="@+id/item_contact_avatar" />

            <TextView
                android:id="@+id/item_contact_filter_number"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/margin_16"
                app:layout_constraintTop_toTopOf="@+id/item_contact_avatar"
                app:layout_constraintStart_toEndOf="@+id/item_contact_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/item_contact_name"
                app:mainText="@{contact.number}"
                app:searchText="@{contact.searchText}" />

            <TextView
                android:id="@+id/item_contact_name"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="@+id/item_contact_filter_number"
                app:layout_constraintStart_toStartOf="@+id/item_contact_filter_number"
                app:layout_constraintTop_toBottomOf="@+id/item_contact_filter_number"
                app:layout_constraintBottom_toBottomOf="@+id/item_contact_avatar"
                app:mainText="@{contact.name}"
                app:searchText="@{contact.searchText}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>