<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.util.ArrayList"/>
        <variable
            name="filteringList"
            type="ArrayList&lt;Integer&gt;"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_16">

            <TextView
                android:id="@+id/dialog_filter_condition_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/condition_dialog_title"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/dialog_filter_condition_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_8"
                style="@style/Button.Icon"
                app:icon="@drawable/ic_close_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <CheckBox
                android:id="@+id/dialog_filter_condition_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/padding_5"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@string/condition_full"
                android:checked="@{filteringList.contains(0)}"
                app:layout_constraintTop_toBottomOf="@+id/dialog_filter_condition_title" />

            <CheckBox
                android:id="@+id/dialog_filter_condition_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/padding_5"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@string/condition_start"
                android:checked="@{filteringList.contains(1)}"
                app:layout_constraintTop_toBottomOf="@+id/dialog_filter_condition_full" />

            <CheckBox
                android:id="@+id/dialog_filter_condition_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/padding_5"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@string/condition_contain"
                android:checked="@{filteringList.contains(2)}"
                app:layout_constraintTop_toBottomOf="@+id/dialog_filter_condition_start" />

            <Button
                android:id="@+id/dialog_filter_condition_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dialog_filter_condition_contain" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>



