<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="call"
            type="com.tarasovvp.smartblocker.model.Call" />
        <variable
            name="contact"
            type="com.tarasovvp.smartblocker.model.Contact" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingHorizontal="@dimen/padding_16"
        app:layout_constraintBottom_toTopOf="@+id/number_data_detail_add_filter"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/number_data_detail_item_contact"
                layout="@layout/item_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_8"
                app:contact="@{contact}"
                app:isDetail="@{true}"
                android:visibility="@{contact == null ? View.GONE : View.VISIBLE, default=gone}"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/number_data_detail_item_call"
                layout="@layout/item_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_8"
                app:call="@{call}"
                app:isDetail="@{true}"
                android:visibility="@{call == null ? View.GONE : View.VISIBLE, default=invisible}"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_item_contact" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/number_data_detail_add_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/add"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_item_call" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/number_data_detail_add_filter_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_bg"
                app:icon="@drawable/ic_condition_phone"
                android:text="@string/condition_full"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_add_filter" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/number_data_detail_add_filter_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_bg"
                app:icon="@drawable/ic_condition_flag"
                android:text="@string/condition_start"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_add_filter_full" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/number_data_detail_add_filter_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:backgroundTint="@color/main_bg"
                app:icon="@drawable/ic_condition_filter"
                android:text="@string/condition_contain"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_add_filter_start"  />

            <TextView
                android:id="@+id/number_data_detail_filter_list_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/contact_list_with_contact"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_add_filter" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/number_data_detail_filter_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0"
                android:layout_marginTop="@dimen/margin_8"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_8"
                android:scrollbars="vertical"
                android:clickable="true"
                android:focusable="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_filter_list_description" />

            <include
                android:id="@+id/number_data_detail_filter_list_empty"
                layout="@layout/include_empty_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_data_detail_filter_list_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>

