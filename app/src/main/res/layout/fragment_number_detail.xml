<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_50"
    android:layout_marginHorizontal="@dimen/margin_10">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_detail_left_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_detail_right_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

    <ImageView
        android:id="@+id/number_detail_avatar"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_100"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/number_detail_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/number_detail_avatar"
        app:layout_constraintEnd_toEndOf="@+id/number_detail_avatar" />

    <TextView
        android:id="@+id/number_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_avatar" />

    <TextView
        android:id="@+id/number_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_name" />

    <TextView
        android:id="@+id/number_detail_priority"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_phone" />

    <TextView
        android:id="@+id/number_detail_black_list_title"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:visibility="gone"
        android:text="@string/black_list_criteria"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_priority" />

    <LinearLayout
        android:id="@+id/number_detail_black_number_list"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_black_list_title" />

    <TextView
        android:id="@+id/number_detail_white_list_title"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:visibility="gone"
        android:text="@string/white_list_criteria"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_black_number_list" />

    <LinearLayout
        android:id="@+id/number_detail_white_number_list"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_white_list_title" />

    <Button
        android:id="@+id/number_detail_add_filter"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_25"
        android:text="@string/add_filter"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_white_number_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>