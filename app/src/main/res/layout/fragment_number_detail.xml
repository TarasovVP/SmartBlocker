<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_50"
    android:layout_marginHorizontal="@dimen/margin_10">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_detail_left_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/number_detail_right_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

    <ImageView
        android:id="@+id/number_detail_avatar"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_100"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_avatar" />

    <TextView
        android:id="@+id/number_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_name" />

    <TextView
        android:id="@+id/number_detail_ratings_title"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_phone" />

    <LinearLayout
        android:id="@+id/number_detail_ratings_list"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_ratings_title" />

    <TextView
        android:id="@+id/number_detail_categories_title"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_ratings_list" />

    <LinearLayout
        android:id="@+id/number_detail_categories_list"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/number_detail_right_gd"
        app:layout_constraintStart_toEndOf="@+id/number_detail_left_gd"
        app:layout_constraintTop_toBottomOf="@+id/number_detail_categories_title" />

</androidx.constraintlayout.widget.ConstraintLayout>