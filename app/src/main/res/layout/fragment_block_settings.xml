<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_20">

    <CheckBox
        android:id="@+id/block_settings_back_ground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:checked="true"
        android:text="@string/bg_work_on"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/block_settings_back_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:checked="true"
        android:text="@string/switch_on_notification"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/block_settings_back_ground" />


</androidx.constraintlayout.widget.ConstraintLayout>