<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/padding_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tarasovvp.blacklister.utils.SwitchView
            android:id="@+id/block_settings_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/change_turn_block"
            app:turnOffModeText="@string/turn_off"
            app:turnOffModeIcon="@drawable/ic_block"
            app:turnOnModeText="@string/turn_on"
            app:turnOnModeIcon="@drawable/ic_accepted"
            app:info="@string/change_back_ground"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tarasovvp.blacklister.utils.SwitchView
            android:id="@+id/block_settings_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            app:title="@string/change_back_ground"
            app:turnOffModeText="@string/back_ground"
            app:turnOnModeText="@string/fore_ground"
            app:info="@string/settings_back_ground_info"
            app:layout_constraintTop_toBottomOf="@+id/block_settings_turn"/>

        <com.tarasovvp.blacklister.utils.SwitchView
            android:id="@+id/block_settings_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            app:title="@string/change_priority"
            app:turnOffModeText="@string/black_list"
            app:turnOffModeIcon="@drawable/ic_black_filter"
            app:turnOnModeText="@string/white_list"
            app:turnOnModeIcon="@drawable/ic_white_filter"
            app:info="@string/change_priority_info"
            app:layout_constraintTop_toBottomOf="@+id/block_settings_foreground"/>

        <com.tarasovvp.blacklister.utils.SwitchView
            android:id="@+id/block_settings_hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            app:title="@string/block_hidden"
            app:turnOffModeText="@string/turn_off"
            app:turnOffModeIcon="@drawable/ic_block"
            app:turnOnModeText="@string/turn_on"
            app:turnOnModeIcon="@drawable/ic_accepted"
            app:info="@string/change_back_ground"
            app:layout_constraintTop_toBottomOf="@+id/block_settings_priority"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>