<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.core.content.ContextCompat" />
        <import type="android.view.View" />

        <variable
            name="filter"
            type="com.tarasovvp.smartblocker.models.Filter" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_8"
        app:cardCornerRadius="@dimen/padding_12"
        app:cardElevation="@dimen/padding_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_filter_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_16">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_filter_detail_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#80989595"
                android:scaleType="center"
                app:imageResource="@{filter.conditionTypeIcon}"
                app:tint="@{filter.blackFilter ? @color/sunset : @color/islamic_green}"
                app:layout_constraintBottom_toTopOf="@id/item_filter_detail_divider"
                app:layout_constraintEnd_toStartOf="@+id/item_filter_detail_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/item_filter_detail_value"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/margin_16"
                android:text="@{filter.addFilter}"
                android:textColor="@{filter.filterAction == null ? @color/main_color : ContextCompat.getColor(context, filter.filterAction.color)}"
                app:layout_constraintBottom_toTopOf="@+id/item_filter_detail_type_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_filter_detail_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_filter_detail_type_title"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{filter == null ? filter.filter : context.getString(filter.conditionTypeName)}"
                android:textColor="@{filter.filterAction == null ? @color/main_color : ContextCompat.getColor(context, filter.filterAction.color)}"
                app:layout_constraintEnd_toEndOf="@+id/item_filter_detail_value"
                app:layout_constraintStart_toStartOf="@id/item_filter_detail_value"
                app:layout_constraintTop_toBottomOf="@+id/item_filter_detail_value"
                app:layout_constraintBottom_toBottomOf="@+id/item_filter_detail_avatar"/>

            <View
                android:id="@+id/item_filter_detail_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1"
                android:background="@color/light_steel_blue"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintTop_toBottomOf="@+id/item_filter_detail_type_title" />

            <TextView
                android:id="@+id/item_filter_detail_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="@{((filter.isAddFilterAction &amp;&amp; !filter.isPreview) || filter.filterAction == null) ? View.VISIBLE : View.GONE}"
                android:textColor="@{filter.blackFilter ? @color/sunset : @color/islamic_green}"
                android:text="@{String.format(context.getString(filter.filteredCallsText), filter.filteredCalls)}"
                app:layout_constraintTop_toBottomOf="@+id/item_filter_detail_divider" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>


