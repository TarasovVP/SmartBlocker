<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.tarasovvp.smartblocker.enums.Info" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding_8">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_30"
            android:paddingBottom="@dimen/padding_16">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pop_up_window_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:textSize="11sp"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/text_color_black"
                    android:text="@{info.getHtmlWithImages(context)}"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/pop_up_window_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:scaleType="fitCenter"
                    app:imageResource="@{info.iconResource}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pop_up_window_description" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <ImageView
            android:id="@+id/pop_up_window_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:paddingHorizontal="@dimen/padding_16"
            android:paddingVertical="@dimen/padding_8"
            android:src="@drawable/ic_close_small"/>
    </androidx.cardview.widget.CardView>
</layout>