<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartBlocker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_bg_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" >@color/item_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:editTextColor">@color/text_color_grey</item>
        <item name="android:textColorHint">@color/comet</item>
        <item name="colorControlNormal">@color/text_color_grey</item>
        <item name="colorOnSurface">@color/main_bg_start</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.02</item>

        <item name="materialButtonStyle">@style/FilledButtonStyle</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFABStyle</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
    </style>

</resources>