<resources>
    <!-- Base application theme. -->
    <style name="Theme.Blacklister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_bg_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="materialButtonStyle">@style/StrokeButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>

        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

</resources>