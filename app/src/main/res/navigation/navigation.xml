<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainNavigation"
    app:startDestination="@+id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.tarasovvp.blacklister.ui.start.onboarding.OnBoardingFragment">
        <action
            android:id="@+id/startLoginScreen"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tarasovvp.blacklister.ui.start.login.LoginFragment"
        android:label="@string/log_in">
        <action
            android:id="@+id/startCallLogList"
            app:destination="@id/callListFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/startSignUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/startForgotPasswordDialog"
            app:destination="@id/forgotPasswordDialog" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tarasovvp.blacklister.ui.start.sign_up.SignUpFragment"
        android:label="@string/sign_up"/>

    <fragment
        android:id="@+id/callListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.call_list.CallListFragment"
        android:label="@string/blocked_call_log">
        <action
            android:id="@+id/startAddFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/startContactDetailFragment"
            app:destination="@id/contactDetailFragment" />
        <action
            android:id="@+id/startDeleteFilterDialog"
            app:destination="@id/deleteFilterDialog" />
    </fragment>

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.contact_list.ContactListFragment"
        android:label="@string/contact_list">
        <action
            android:id="@+id/startContactDetailFragment"
            app:destination="@id/contactDetailFragment" />
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.tarasovvp.blacklister.ui.main.contact_detail.ContactDetailFragment"
        android:label="@string/details">
        <argument
            android:name="phone"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/startAddFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/startBlockSettingsFragment"
            app:destination="@id/blockSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/blackFilterListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.filter_list.BlackFilterListFragment"
        android:label="@string/black_list">
        <action
            android:id="@+id/startAddFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/startDeleteFilterDialog"
            app:destination="@id/deleteFilterDialog" />
    </fragment>

    <fragment
        android:id="@+id/whiteFilterListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.filter_list.WhiteFilterListFragment"
        android:label="@string/white_list">
        <action
            android:id="@+id/startAddFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/startDeleteFilterDialog"
            app:destination="@id/deleteFilterDialog" />
    </fragment>

    <action
        android:id="@+id/startSettingsListFragment"
        app:destination="@id/settingsListFragment" />

    <fragment
        android:id="@+id/settingsListFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.settings_list.SettingsListFragment"
        android:label="@string/settings">
        <action
            android:id="@+id/startBlockSettingsFragment"
            app:destination="@id/blockSettingsFragment" />
        <action
            android:id="@+id/startAccountDetailsFragment"
            app:destination="@id/accountDetailsFragment" />
        <action
            android:id="@+id/startAppLanguageFragment"
            app:destination="@id/appLanguageFragment" />
        <action
            android:id="@+id/startAppThemeFragment"
            app:destination="@id/appThemeFragment" />
        <action
            android:id="@+id/startAccountActionDialog"
            app:destination="@id/accountActionDialog" />
    </fragment>

    <action
        android:id="@+id/startBlockSettingsFragment"
        app:destination="@id/blockSettingsFragment" />

    <fragment
        android:id="@+id/blockSettingsFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.block_settings.BlockSettingsFragment"
        android:label="@string/block_settings" />

    <fragment
        android:id="@+id/accountDetailsFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.account_detals.AccountDetailsFragment"
        android:label="@string/personal_details">
        <action
            android:id="@+id/startAccountActionDialog"
            app:destination="@id/accountActionDialog" />
        <action
            android:id="@+id/startLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/appLanguageFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.app_language.AppLanguageFragment"
        android:label="@string/app_language" />

    <fragment
        android:id="@+id/appThemeFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.app_theme.AppThemeFragment"
        android:label="@string/app_theme" />

    <dialog
        android:id="@+id/deleteFilterDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.DeleteFilterDialog">
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/accountActionDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.AccountActionDialog">
        <argument
            android:name="isLogOut"
            android:defaultValue="false"
            app:argType="boolean" />
    </dialog>

    <dialog
        android:id="@+id/appExitDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.AppExitDialog" />

    <action
        android:id="@+id/startAppExitDialog"
        app:destination="@id/appExitDialog" />

    <dialog
        android:id="@+id/forgotPasswordDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.ForgotPasswordDialog">
        <argument
            android:name="email"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </dialog>

    <fragment
        android:id="@+id/addFragment"
        android:name="com.tarasovvp.blacklister.ui.main.add.AddFragment" >
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startDeleteFilterDialog"
            app:destination="@id/deleteFilterDialog" />
        <action
            android:id="@+id/startBlockSettingsFragment"
            app:destination="@id/blockSettingsFragment" />
        <action
            android:id="@+id/startContactDetailFragment"
            app:destination="@id/contactDetailFragment" />
    </fragment>

</navigation>
