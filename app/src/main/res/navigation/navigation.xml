<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainNavigation"
    app:startDestination="@+id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.tarasovvp.blacklister.ui.start.onboarding.OnBoardingFragment">
        <action
            android:id="@+id/startLoginScreen"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tarasovvp.blacklister.ui.start.login.LoginFragment"
        android:label="@string/log_in">
        <action
            android:id="@+id/startBlackFilterListFragment"
            app:destination="@id/blackFilterListFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/startSignUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/startForgotPasswordDialog"
            app:destination="@id/forgotPasswordDialog" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tarasovvp.blacklister.ui.start.sign_up.SignUpFragment"
        android:label="" />

    <fragment
        android:id="@+id/blackFilterListFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.filter_list.BlackFilterListFragment"
        android:label="@string/black_list">
        <action
            android:id="@+id/startFilterAddFragment"
            app:destination="@id/filterAddFragment" />
        <action
            android:id="@+id/startFilterDetailFragment"
            app:destination="@id/filterDetailFragment" />
        <action
            android:id="@+id/startFilterConditionsDialog"
            app:destination="@id/filterConditionsDialog" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
    </fragment>

    <fragment
        android:id="@+id/whiteFilterListFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.filter_list.WhiteFilterListFragment"
        android:label="@string/white_list">
        <action
            android:id="@+id/startFilterAddFragment"
            app:destination="@id/filterAddFragment" />
        <action
            android:id="@+id/startFilterDetailFragment"
            app:destination="@id/filterDetailFragment" />
        <action
            android:id="@+id/startFilterConditionsDialog"
            app:destination="@id/filterConditionsDialog" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
    </fragment>

    <fragment
        android:id="@+id/filterDetailFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.filter_detail.FilterDetailFragment" >
        <argument
            android:name="filterDetail"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startNumberDataDetailFragment"
            app:destination="@id/numberDataDetailFragment" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
        <action
            android:id="@+id/startCallDetailFragment"
            app:destination="@id/callDetailFragment" />
        <action
            android:id="@+id/startBlackFilterListFragment"
            app:destination="@id/blackFilterListFragment"
            app:popUpTo="@id/blackFilterListFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/startWhiteFilterListFragment"
            app:destination="@id/whiteFilterListFragment"
            app:popUpTo="@id/blackFilterListFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/filterAddFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.filter_add.FilterAddFragment">
        <argument
            android:name="filterAdd"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
        <action
            android:id="@+id/startBlockSettingsFragment"
            app:destination="@id/blockSettingsFragment" />
        <action
            android:id="@+id/startFilterDetailFragment"
            app:destination="@id/filterDetailFragment" />
        <action
            android:id="@+id/startNumberDataDetailFragment"
            app:destination="@id/numberDataDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.contact_list.ContactListFragment"
        android:label="@string/contact_list">
        <action
            android:id="@+id/startNumberDataDetailFragment"
            app:destination="@id/numberDataDetailFragment" />
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/callListFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.call_list.CallListFragment"
        android:label="@string/log_list">
        <action
            android:id="@+id/startNumberDataDetailFragment"
            app:destination="@id/numberDataDetailFragment" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
    </fragment>

    <fragment
        android:id="@+id/numberDataDetailFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.number_data_detail.NumberDataDetailFragment"
        android:label="@string/number">
        <argument
            android:name="numberData"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.ui.number_data.NumberData"
            app:nullable="true" />
        <action
            android:id="@+id/startFilterAddFragment"
            app:destination="@id/filterAddFragment" />
        <action
            android:id="@+id/startFilterDetailFragment"
            app:destination="@id/filterDetailFragment" />
        <action
            android:id="@+id/startCallDetailFragment"
            app:destination="@id/callDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/callDetailFragment"
        android:name="com.tarasovvp.blacklister.ui.number_data.call_detail.CallDetailFragment"
        android:label="@string/blocked_call_log">
        <argument
            android:name="contact"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Contact"
            app:nullable="true" />
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startNumberDataDetailFragment"
            app:destination="@id/numberDataDetailFragment" />
    </fragment>

    <action
        android:id="@+id/startSettingsListFragment"
        app:destination="@id/settingsListFragment" />

    <fragment
        android:id="@+id/settingsListFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.settings_list.SettingsListFragment"
        android:label="@string/settings">
        <action
            android:id="@+id/startBlockSettingsFragment"
            app:destination="@id/blockSettingsFragment" />
        <action
            android:id="@+id/startAccountDetailsFragment"
            app:destination="@id/accountDetailsFragment" />
        <action
            android:id="@+id/startAppLanguageFragment"
            app:destination="@id/appLanguageFragment" />
        <action
            android:id="@+id/startAppThemeFragment"
            app:destination="@id/appThemeFragment" />
        <action
            android:id="@+id/startAccountActionDialog"
            app:destination="@id/accountActionDialog" />
    </fragment>

    <action
        android:id="@+id/startBlockSettingsFragment"
        app:destination="@id/blockSettingsFragment" />

    <fragment
        android:id="@+id/blockSettingsFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.block_settings.BlockSettingsFragment"
        android:label="@string/block_settings" />

    <fragment
        android:id="@+id/accountDetailsFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.account_detals.AccountDetailsFragment"
        android:label="@string/personal_details">
        <action
            android:id="@+id/startAccountActionDialog"
            app:destination="@id/accountActionDialog" />
        <action
            android:id="@+id/startLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/appLanguageFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.app_language.AppLanguageFragment"
        android:label="@string/app_language" />

    <fragment
        android:id="@+id/appThemeFragment"
        android:name="com.tarasovvp.blacklister.ui.settings.app_theme.AppThemeFragment"
        android:label="@string/app_theme" />

    <dialog
        android:id="@+id/filterActionDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.FilterActionDialog">
        <argument
            android:name="filterAction"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Filter"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/accountActionDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.AccountActionDialog">
        <argument
            android:name="isLogOut"
            android:defaultValue="false"
            app:argType="boolean" />
    </dialog>

    <dialog
        android:id="@+id/filterConditionsDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.FilterConditionsDialog">
        <argument
            android:name="filterConditionList"
            android:defaultValue="@null"
            app:argType="integer[]"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/appExitDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.AppExitDialog" />

    <action
        android:id="@+id/startAppExitDialog"
        app:destination="@id/appExitDialog" />

    <dialog
        android:id="@+id/unavailableNetworkDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.UnavailableNetworkDialog" />

    <action
        android:id="@+id/startUnavailableNetworkDialog"
        app:destination="@id/unavailableNetworkDialog" />

    <dialog
        android:id="@+id/forgotPasswordDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.ForgotPasswordDialog">
        <argument
            android:name="email"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </dialog>

</navigation>
