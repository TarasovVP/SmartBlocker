<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainNavigation"
    app:startDestination="@+id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.tarasovvp.blacklister.ui.start.onboarding.OnBoardingFragment">
        <action
            android:id="@+id/startLoginScreen"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tarasovvp.blacklister.ui.start.login.LoginFragment">
        <action
            android:id="@+id/startCallLogList"
            app:destination="@id/callLogListFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/startSignUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tarasovvp.blacklister.ui.start.signup.SignUpFragment" />

    <fragment
        android:id="@+id/callLogListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.callloglist.CallLogListFragment"
        android:label="@string/log_list">
        <action
            android:id="@+id/startContactDetail"
            app:destination="@id/contactDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.contactlist.ContactListFragment"
        android:label="@string/contact_list">
        <action
            android:id="@+id/startContactDetail"
            app:destination="@id/contactDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.tarasovvp.blacklister.ui.main.contactdetail.ContactDetailFragment">
        <argument
            android:name="contact"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Contact"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/blackNumberListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.blacknumberlist.BlackNumberListFragment"
        android:label="@string/number_list">
        <action
            android:id="@+id/startInfoDialog"
            app:destination="@id/infoDialog" />
        <action
            android:id="@+id/startBlackNumberAddFragment"
            app:destination="@id/blackNumberAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.tarasovvp.blacklister.ui.main.settings.SettingsFragment"
        android:label="@string/settings" />

    <dialog
        android:id="@+id/infoDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.InfoDialog">
        <argument
            android:name="blackNumber"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.BlackNumber"
            app:nullable="true" />
        <argument
            android:name="contact"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Contact"
            app:nullable="true" />
    </dialog>

    <action
        android:id="@+id/startInfoDialog"
        app:destination="@id/infoDialog" />

    <fragment
        android:id="@+id/blackNumberAddFragment"
        android:name="com.tarasovvp.blacklister.ui.main.blacknumberadd.BlackNumberAddFragment"
        android:label="@string/addBlackNumber" >
        <argument
            android:name="blackNumber"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.BlackNumber"
            app:nullable="true" />
    </fragment>
</navigation>
