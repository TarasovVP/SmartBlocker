<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.blacklister.ui.login.LoginFragment" >
        <action
            android:id="@+id/startLogList"
            app:destination="@id/logListFragment"/>
    </fragment>

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.example.blacklister.ui.onboarding.OnBoardingFragment" />

    <fragment
        android:id="@+id/registryFragment"
        android:name="com.example.blacklister.ui.registry.RegistryFragment" />

    <fragment
        android:id="@+id/logListFragment"
        android:name="com.example.blacklister.ui.callloglist.CallLogListFragment" />

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.example.blacklister.ui.contactlist.ContactListFragment" >
        <action
            android:id="@+id/startContactDetail"
            app:destination="@id/contactDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.example.blacklister.ui.contactdetail.ContactDetailFragment" >
        <argument
            android:name="contact"
            android:defaultValue="@null"
            app:argType="com.example.blacklister.model.Contact"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/numberListFragment"
        android:name="com.example.blacklister.ui.numberlist.NumberListFragment" >
        <action
            android:id="@+id/startInfoDialog"
            app:destination="@id/infoDialog"/>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.blacklister.ui.settings.SettingsFragment" />

    <dialog
        android:id="@+id/infoDialog"
        android:name="com.example.blacklister.ui.dialogs.InfoDialog" >
        <argument
            android:name="blackNumber"
            android:defaultValue="@null"
            app:argType="com.example.blacklister.model.BlackNumber"
            app:nullable="true"/>
    </dialog>


</navigation>
