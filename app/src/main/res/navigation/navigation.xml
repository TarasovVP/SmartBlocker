<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainNavigation"
    app:startDestination="@+id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.tarasovvp.blacklister.ui.start.onboarding.OnBoardingFragment">
        <action
            android:id="@+id/startLoginScreen"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tarasovvp.blacklister.ui.start.login.LoginFragment">
        <action
            android:id="@+id/startCallLogList"
            app:destination="@id/callLogListFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/startSignUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tarasovvp.blacklister.ui.start.signup.SignUpFragment" />

    <fragment
        android:id="@+id/callLogListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.callloglist.CallLogListFragment"
        android:label="@string/log_list">
        <action
            android:id="@+id/startNumberAddFragment"
            app:destination="@id/numberAddFragment" />
        <action
            android:id="@+id/startNumberDetailFragment"
            app:destination="@id/numberDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.contactlist.ContactListFragment"
        android:label="@string/contact_list">
        <action
            android:id="@+id/startNumberDetailFragment"
            app:destination="@id/numberDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/numberDetailFragment"
        android:name="com.tarasovvp.blacklister.ui.main.numberdetail.NumberDetailFragment"
        android:label="@string/details">
        <argument
            android:name="number"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/startLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/blackNumberListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.blacknumberlist.BlackNumberListFragment"
        android:label="@string/black_list">
        <action
            android:id="@+id/startInfoDialog"
            app:destination="@id/infoDialog" />
        <action
            android:id="@+id/startNumberAddFragment"
            app:destination="@id/numberAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/whiteNumberListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.whitenumberlist.WhiteNumberListFragment"
        android:label="@string/white_list">
        <action
            android:id="@+id/startInfoDialog"
            app:destination="@id/infoDialog" />
        <action
            android:id="@+id/startNumberAddFragment"
            app:destination="@id/numberAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsListFragment"
        android:name="com.tarasovvp.blacklister.ui.main.settings.settingslist.SettingsListFragment"
        android:label="@string/settings" >
        <action
            android:id="@+id/startBlockSettingsFragment"
            app:destination="@id/blockSettingsFragment" />
        <action
            android:id="@+id/startAccountDetailsFragment"
            app:destination="@id/accountDetailsFragment" />
        <action
            android:id="@+id/startAppLanguageFragment"
            app:destination="@id/appLanguageFragment" />
        <action
            android:id="@+id/startAppThemeFragment"
            app:destination="@id/appThemeFragment" />
    </fragment>

    <fragment
        android:id="@+id/blockSettingsFragment"
        android:name="com.tarasovvp.blacklister.ui.main.settings.blocksettings.BlockSettingsFragment"
        android:label="@string/block_settings"/>

    <fragment
        android:id="@+id/accountDetailsFragment"
        android:name="com.tarasovvp.blacklister.ui.main.settings.accountdetals.AccountDetailsFragment"
        android:label="@string/personal_details">
        <action
            android:id="@+id/startLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/appLanguageFragment"
        android:name="com.tarasovvp.blacklister.ui.main.settings.applanguage.AppLanguageFragment"
        android:label="@string/app_language"/>

    <fragment
        android:id="@+id/appThemeFragment"
        android:name="com.tarasovvp.blacklister.ui.main.settings.apptheme.AppThemeFragment"
        android:label="@string/app_theme"/>

    <dialog
        android:id="@+id/infoDialog"
        android:name="com.tarasovvp.blacklister.ui.dialogs.InfoDialog">
        <argument
            android:name="blackNumber"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.BlackNumber"
            app:nullable="true" />
        <argument
            android:name="whiteNumber"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.WhiteNumber"
            app:nullable="true" />
        <argument
            android:name="contact"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.Contact"
            app:nullable="true" />
    </dialog>

    <action
        android:id="@+id/startInfoDialog"
        app:destination="@id/infoDialog" />

    <fragment
        android:id="@+id/numberAddFragment"
        android:name="com.tarasovvp.blacklister.ui.main.numberadd.NumberAddFragment"
        android:label="@string/addBlackNumber" >
        <argument
            android:name="blackNumber"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.BlackNumber"
            app:nullable="true" />
        <argument
            android:name="whiteNumber"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.blacklister.model.WhiteNumber"
            app:nullable="true" />
    </fragment>
</navigation>
