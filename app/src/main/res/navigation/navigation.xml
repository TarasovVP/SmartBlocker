<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainNavigation"
    app:startDestination="@+id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.authorization.onboarding.OnBoardingFragment">
        <action
            android:id="@+id/startLoginScreen"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.authorization.login.LoginFragment" >
        <action
            android:id="@+id/startListBlockerFragment"
            app:destination="@id/listBlockerFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/startSignUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/startForgotPasswordDialog"
            app:destination="@id/forgotPasswordDialog" />
        <action
            android:id="@+id/startUnauthorizedEnterDialog"
            app:destination="@id/unauthorizedEnterDialog" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.authorization.sign_up.SignUpFragment" />

    <fragment
        android:id="@+id/listBlockerFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.list.list_filter.ListBlockerFragment"
        android:label="@string/list_blocker">
        <action
            android:id="@+id/startCreateFilterFragment"
            app:destination="@id/createFilterFragment" />
        <action
            android:id="@+id/startDetailsFilterFragment"
            app:destination="@id/detailsFilterFragment" />
        <action
            android:id="@+id/startFilterConditionsDialog"
            app:destination="@id/filterConditionsDialog" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/listPermissionFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.list.list_filter.ListPermissionFragment"
        android:label="@string/list_permission">
        <action
            android:id="@+id/startCreateFilterFragment"
            app:destination="@id/createFilterFragment" />
        <action
            android:id="@+id/startDetailsFilterFragment"
            app:destination="@id/detailsFilterFragment" />
        <action
            android:id="@+id/startFilterConditionsDialog"
            app:destination="@id/filterConditionsDialog" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFilterFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.details.details_filter.DetailsFilterFragment">
        <argument
            android:name="filterDetails"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startDetailsNumberDataFragment"
            app:destination="@id/DetailsNumberDataFragment" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
        <action
            android:id="@+id/startListBlockerFragment"
            app:destination="@id/listBlockerFragment"
            app:popUpTo="@id/listBlockerFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/startListPermissionFragment"
            app:destination="@id/listPermissionFragment"
            app:popUpTo="@id/listBlockerFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/createFilterFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.create.CreateFilterFragment" >
        <argument
            android:name="filterCreate"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startCountryCodeSearchDialog"
            app:destination="@id/countryCodeSearchDialog" />
        <action
            android:id="@+id/startFilterActionDialog"
            app:destination="@id/filterActionDialog" />
        <action
            android:id="@+id/startSettingsBlockerFragment"
            app:destination="@id/settingsBlockerFragment" />
        <action
            android:id="@+id/startDetailsFilterFragment"
            app:destination="@id/detailsFilterFragment" />
        <action
            android:id="@+id/startDetailsNumberDataFragment"
            app:destination="@id/DetailsNumberDataFragment" />
        <action
            android:id="@+id/startListBlockerFragment"
            app:destination="@id/listBlockerFragment"
            app:popUpTo="@id/listBlockerFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/startListPermissionFragment"
            app:destination="@id/listPermissionFragment"
            app:popUpTo="@id/listBlockerFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/listContactFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.list.list_contact.ListContactFragment"
        android:label="@string/list_contact">
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/startDetailsNumberDataFragment"
            app:destination="@id/DetailsNumberDataFragment" />
        <action
            android:id="@+id/startNumberDataFilteringDialog"
            app:destination="@id/numberDataFilteringDialog" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/listCallFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.list.list_call.ListCallFragment"
        android:label="@string/list_call">
        <argument
            android:name="searchQuery"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/startDetailsNumberDataFragment"
            app:destination="@id/DetailsNumberDataFragment" />
        <action
            android:id="@+id/startNumberDataFilteringDialog"
            app:destination="@id/numberDataFilteringDialog" />
        <action
            android:id="@+id/startBlockedCallDeleteDialog"
            app:destination="@id/blockedCallDeleteDialog" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailsNumberDataFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.details.details_number_data.DetailsNumberDataFragment"
        android:label="@string/details_number">
        <argument
            android:name="numberData"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.NumberData"
            app:nullable="true" />
        <action
            android:id="@+id/startCreateFilterFragment"
            app:destination="@id/createFilterFragment" />
        <action
            android:id="@+id/startDetailsFilterFragment"
            app:destination="@id/detailsFilterFragment" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/startSettingsBlockerFragment"
            app:destination="@id/settingsBlockerFragment" />
    </fragment>

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.number.info.InfoFragment" >
        <argument
            android:name="info"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.InfoData"
            app:nullable="true" />
        <action
            android:id="@+id/startInfoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <action
        android:id="@+id/startSettingsListFragment"
        app:destination="@id/settingsListFragment" />

    <fragment
        android:id="@+id/settingsListFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.settings.settings_list.SettingsListFragment"
        android:label="@string/settings">
        <action
            android:id="@+id/startSettingsBlockerFragment"
            app:destination="@id/settingsBlockerFragment" />
        <action
            android:id="@+id/startSettingsAccountFragment"
            app:destination="@id/settingsAccountFragment" />
        <action
            android:id="@+id/startSettingsLanguageFragment"
            app:destination="@id/settingsLanguageFragment" />
        <action
            android:id="@+id/startSettingsThemeFragment"
            app:destination="@id/settingsThemeFragment" />
        <action
            android:id="@+id/startSettingsReviewDialog"
            app:destination="@id/settingsReviewDialog" />
        <action
            android:id="@+id/startSettingsPrivacyFragment"
            app:destination="@id/settingsPrivacyFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsBlockerFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.settings.settings_blocker.SettingsBlockerFragment"
        android:label="@string/settings_blocker">
        <action
            android:id="@+id/startCountryCodeSearchDialog"
            app:destination="@id/countryCodeSearchDialog" />
    </fragment>

    <fragment
        android:id="@+id/settingsAccountFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.settings.settings_account.SettingsAccountFragment"
        android:label="@string/settings_account">
        <action
            android:id="@+id/startAccountActionDialog"
            app:destination="@id/accountActionDialog" />
        <action
            android:id="@+id/startChangePasswordDialog"
            app:destination="@id/changePasswordDialog" />
        <action
            android:id="@+id/startLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/mainNavigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/settingsLanguageFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.settings.settings_language.SettingsLanguageFragment"
        android:label="@string/settings_language" />

    <fragment
        android:id="@+id/settingsThemeFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.settings.settings_theme.SettingsThemeFragment"
        android:label="@string/settings_theme" />

    <dialog
        android:id="@+id/settingsReviewDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.SettingsReviewDialog" />

    <fragment
        android:id="@+id/settingsPrivacyFragment"
        android:name="com.tarasovvp.smartblocker.ui.main.settings.settings_privacy.SettingsPrivacyFragment"
        android:label="@string/settings_privacy" />

    <dialog
        android:id="@+id/accountActionDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.AccountActionDialog">
        <argument
            android:name="isLogOut"
            android:defaultValue="false"
            app:argType="boolean" />
    </dialog>

    <dialog
        android:id="@+id/filterConditionsDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.FilterConditionsDialog">
        <argument
            android:name="filteringList"
            android:defaultValue="@null"
            app:argType="integer[]"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/appExitDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.AppExitDialog" />

    <action
        android:id="@+id/startAppExitDialog"
        app:destination="@id/appExitDialog" />

    <dialog
        android:id="@+id/unavailableNetworkDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.UnavailableNetworkDialog" />

    <action
        android:id="@+id/startUnavailableNetworkDialog"
        app:destination="@id/unavailableNetworkDialog" />

    <dialog
        android:id="@+id/forgotPasswordDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.ForgotPasswordDialog">
        <argument
            android:name="email"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/unauthorizedEnterDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.UnauthorizedEnterDialog" />

    <dialog
        android:id="@+id/changePasswordDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.ChangePasswordDialog" />

    <dialog
        android:id="@+id/numberDataFilteringDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.NumberDataFilteringDialog">
        <argument
            android:name="filteringList"
            android:defaultValue="@null"
            app:argType="integer[]"
            app:nullable="true" />
        <argument
            android:name="isCallList"
            android:defaultValue="false"
            app:argType="boolean"
            app:nullable="false" />
    </dialog>

    <dialog
        android:id="@+id/filterActionDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.FilterActionDialog">
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.Filter"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/blockedCallDeleteDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.BlockedCallDeleteDialog">
        <argument
            android:name="callDelete"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/countryCodeSearchDialog"
        android:name="com.tarasovvp.smartblocker.ui.dialogs.country_code_search_dialog.CountryCodeSearchDialog" >
        <argument
            android:name="countryCodeList"
            android:defaultValue="@null"
            app:argType="com.tarasovvp.smartblocker.models.CountryCode[]"
            app:nullable="true" />
    </dialog>

</navigation>
