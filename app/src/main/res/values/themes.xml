<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blacklister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/main_bg</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Blacklister.Launcher">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="StrokeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingStart">@dimen/padding_25</item>
        <item name="android:paddingEnd">@dimen/padding_25</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>