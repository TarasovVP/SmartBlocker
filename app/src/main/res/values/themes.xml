<resources>
    <!-- Base application theme. -->
    <style name="Theme.Blacklister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/haiti_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/main_color</item>
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:editTextColor">@color/main_color</item>
        <item name="android:textColorHint">@color/nobel</item>
        <item name="colorControlNormal">@color/main_color</item>
        <item name="colorOnSurface">@color/main_color</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/FilledButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButtonStyle</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/padding_25</item>
        <item name="android:paddingRight">@dimen/padding_25</item>
        <item name="rippleColor">#250092D4</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="backgroundTint">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StrokeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/padding_25</item>
        <item name="android:paddingRight">@dimen/padding_25</item>
        <item name="rippleColor">#250092D4</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="strokeWidth">@dimen/margin_2</item>
        <item name="strokeColor">@color/light_steel_blue</item>
        <item name="android:textColor">@color/enable_bg_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextButton" parent="FilledButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="iconTint">@null</item>
        <item name="android:elevation">@dimen/margin_2</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/comet</item>>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:button">@drawable/check_box_selector</item>
        <item name="android:paddingEnd">@dimen/padding_10</item>
        <item name="android:paddingStart">@dimen/padding_10</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/main_bg</item>
        <item name="android:itemBackground">@color/main_bg</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="MultiChoiceAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:colorAccent">@color/main_color</item>
        <item name="android:textColor">@color/main_color</item>

    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingTop">@dimen/padding_20</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/CommonThemeOverlayFilledDense</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="colorAccent">@color/egyptian_blue</item>
    </style>

    <style name="CommonThemeOverlayFilledDense">
        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/padding_5</item>
        <item name="android:paddingEnd">@dimen/padding_5</item>
    </style>

    <style name="Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@null</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="shapeAppearance">@style/SquareShape</item>
    </style>
    <style name="SquareShape" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="iconPadding">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="BottomSheetDialogStyle" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top</item>
    </style>
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/cornflower_blue</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="ExtendedFloatingActionButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/cornflower_blue</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
    </style>
</resources>