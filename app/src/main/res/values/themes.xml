<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blacklister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/main_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextStyle">@style/SearchableEdittext</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/StrokeButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
    </style>

    <style name="Theme.Blacklister.Launcher">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="StrokeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">@dimen/margin_10</item>
        <item name="android:paddingLeft">@dimen/padding_25</item>
        <item name="android:paddingRight">@dimen/padding_25</item>
        <item name="rippleColor">#250092D4</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeWidth">@dimen/margin_2</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchableEdittext">
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/padding_15</item>
        <item name="android:paddingEnd">@dimen/padding_15</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/main_bg</item>
        <item name="android:itemBackground">@color/main_bg</item>
    </style>
</resources>